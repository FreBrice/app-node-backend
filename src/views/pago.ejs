    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Pago</title>
        <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f4f4;
      padding: 20px;
    }
    .formulario {
      background: #fff;
      padding: 20px;
      border-radius: 8px;
      max-width: 500px;
      margin: auto;
      box-shadow: 0 0 8px rgba(0,0,0,0.1);
    }
    h2 {
      text-align: center;
      margin-bottom: 20px;
    }
    label {
      font-weight: bold;
      display: block;
      margin-top: 10px;
    }
    input {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
      border-radius: 4px;
      border: 1px solid #ccc;
    }
    button {
      margin-top: 15px;
      width: 100%;
      padding: 10px;
      background: #007BFF;
      color: #fff;
      font-size: 16px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    button:hover {
      background: #0056b3;
    }
    .resultado {
      margin-top: 20px;
      background: #e9f7ef;
      padding: 15px;
      border-radius: 5px;
      border: 1px solid #c3e6cb;
    }
  </style>
    </head>
    <body>
        <div class="formulario">
  <h2>Registrar Pago Diario</h2>
  <form id="pagoForm">
    <label for="prestamoId">ID del Préstamo:</label>
    <input type="text" id="prestamoId" required>

    <label for="dia">Día del cronograma:</label>
    <input type="number" id="dia" required>

    <label for="montoPago">Monto pagado (€):</label>
    <input type="number" id="montoPago" required>

    <button type="submit">Registrar Pago</button>
  </form>
  <div id="resultadoPago" class="resultado" style="display:none;"></div>
</div>

<script>
document.getElementById("pagoForm").addEventListener("submit", async function(e) {
  e.preventDefault();

  const prestamoId = document.getElementById("prestamoId").value;
  const dia = parseInt(document.getElementById("dia").value);
  const montoPago = parseFloat(document.getElementById("montoPago").value);

  try {
    const res = await fetch(`http://localhost:4000/prestamos/${prestamoId}/pago`, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ dia, monto: montoPago })
    });
    const data = await res.json();

    document.getElementById("resultadoPago").style.display = "block";
    document.getElementById("resultadoPago").innerHTML = `
      <p><strong>Pago registrado:</strong> Día ${dia}, Monto €${montoPago.toFixed(2)}</p>
    `;
  } catch (err) {
    alert("Error registrando pago: " + err.message);
  }
});
</script>

    </body>
    </html>