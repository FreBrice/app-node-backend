<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>First Web</title>
</head>
<body>
    <h2>Lista de Préstamos Registrados</h2>

    <button onclick="location.href='/prestamo'">Nuevo Préstamo</button>
    <button onclick="location.href='/pago'">Registrar Pago Diario</button>
    <br><br>

<table border="1" cellpadding="8" cellspacing="0">
  <thead>
    <tr>
      <th>Documento</th>
      <th>Nombre</th>
      <th>Monto</th>
      <th>Interés (%)</th>
      <th>Días</th>
      <th>Total</th>
      <th>Cuota diaria</th>
      <th>Fecha de creación</th>
      <th>Cuotas pagadas</th>
    </tr>
  </thead>
  <tbody>
    <% if (typeof prestamos !== 'undefined' && prestamos.length >0) { %>
    <% prestamos.forEach(p => { %>
      <tr>
        <td><%= p.documento %></td>
        <td><%= p.nombre %></td>
        <td>€<%= p.monto.toFixed(2) %></td>
        <td><%= p.interes %>%</td>
        <td><%= p.dias %></td>
        <td>€<%= p.total.toFixed(2) %></td>
        <td>€<%= p.cuotaDiaria.toFixed(2) %></td>
        <td><%= new Date(p.fechaCreacion).toLocaleDateString() %></td>
        <td>
          <div style="background:#e0e0e0;padding:4px;border-radius:4px;text-align:center;">
            <%= p.pagos ? p.pagos.length : 0 %> / <%= p.dias %>
          </div>
        </td>
      </tr>
    <% }) %>
    <% }  else {%>
      <tr>
        <td colspan="9">No hay préstamos registrados</td>
      </tr>
      <% } %>
  </tbody>
</table>

<button id="exportExcel">Exportar tabla a Excel</button>

</body>
</html>